<h1>Events</h1>

  <div class="row">
    <h3>Past events</h3>
    <div class="col s12 m6">
    <% @events_past.each do |event| %>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to event.title, event %></span>
          <p><%= event.description %></p>
        </div>
        <div class="card-action">
          <p><%= event.creator.name %></p>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>

<div class="row">
    <h3>Upcoming events</h3>
    <div class="col s12 m6">
    <% @events_upcoming.each do |event| %>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to event.title, event %></span>
          <p><%= event.description %></p>
        </div>
        <div class="card-action">
          <p><%= event.creator.name %></p>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>